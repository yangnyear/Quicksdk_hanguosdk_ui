<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qg_base_frame"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_height"
        android:layout_marginTop="@dimen/qg_margin_top_of_button"
        android:gravity="center"
        android:text="请选择"
        android:textColor="#1d1919"
        android:textSize="@dimen/qg_big_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_padding" />

    <LinearLayout
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_height"
        android:layout_marginLeft="@dimen/ks_margin_right_size"
        android:layout_marginRight="@dimen/ks_margin_right_size"
        android:background="@drawable/ks_bin_rim_blue_color"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.1" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ks_image_google_logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center"
            android:text="Google"
            android:textColor="@color/ks_login_text_color"
            android:textSize="@dimen/qg_small_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_padding" />

    <LinearLayout
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_height"
        android:layout_marginLeft="@dimen/ks_margin_right_size"
        android:layout_marginRight="@dimen/ks_margin_right_size"
        android:background="@drawable/ks_bin_rim_blue_color"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ks_image_facebook_logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center"
            android:text="Facebook"
            android:textColor="@color/ks_login_text_color"
            android:textSize="@dimen/qg_small_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_padding" />

    <LinearLayout
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_height"
        android:layout_marginLeft="@dimen/ks_margin_right_size"
        android:layout_marginRight="@dimen/ks_margin_right_size"
        android:background="@drawable/ks_bin_rim_blue_color"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ks_image_naver_logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center"
            android:text="Naver"
            android:textColor="@color/ks_login_text_color"
            android:textSize="@dimen/qg_small_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_padding" />

    <LinearLayout
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_height"
        android:layout_marginLeft="@dimen/ks_margin_right_size"
        android:layout_marginRight="@dimen/ks_margin_right_size"
        android:background="@drawable/ks_bin_rim_blue_color"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ks_image_guest_logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center"
            android:text="游客模式"
            android:textColor="@color/ks_login_text_color"
            android:textSize="@dimen/qg_small_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qg_layout_padding" />
</LinearLayout>